{
  "name": "tphyperate",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "bin": {
    "tphyperate": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"tsc -w\" \"nodemon dist/index.js\"",
    "pkg": "pkg .",
    "pkg-win": "pkg --targets node12-win-x64 .",
    "pkg-mac": "pkg --targets node12-macos-x64 .",
    "build-win": "pkg --targets node12-win-x64 . && mv tphyperate.exe base/Win/HypeRate/ && cd base/Win && zip -r ../../Installers/TPHypeRate-Win.tpp TPHypeRate",
    "build-mac": "pkg --targets node12-macos-x64 . && mv tphyperate base/Mac/HypeRate/ && cd base/Mac && zip -r ../../Installers/TPHypeRate-Mac.tpp TPHypeRate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markusbink/hyperate-touch-portal.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/markusbink/hyperate-touch-portal/issues"
  },
  "homepage": "https://github.com/markusbink/hyperate-touch-portal#readme",
  "dependencies": {
    "@types/node": "^16.3.3",
    "@types/ws": "^7.4.7",
    "pkg": "^5.3.1",
    "touchportal-api": "^2.1.1",
    "typescript": "^4.3.5",
    "ws": "^7.5.3"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "nodemon": "^2.0.12"
  }
}
