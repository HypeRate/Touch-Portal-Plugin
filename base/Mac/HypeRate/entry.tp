{
  "sdk": 2,
  "version": 1005,
  "name": "HypeRate",
  "id": "markusbink.TouchPortalHypeRatePlugin",
  "configuration": {
    "colorDark": "#313131",
    "colorLight": "#34AA2F"
  },
  "plugin_start_cmd": "sh %TP_PLUGIN_FOLDER%HypeRate/start_tphyperate.sh",
  "categories": [
    {
      "id": "hyperate_category",
      "name": "HypeRate Stats",
      "imagepath": "%TP_PLUGIN_FOLDER%HypeRate/images/hyperate-logo-icon-24.png",
      "actions": [],
      "events": [],
      "states": [
        {
          "id": "hyperate_current_heartrate",
          "type": "text",
          "desc": "HypeRate Current Heartrate",
          "default": ""
        }
      ]
    }
  ],
  "settings": [
    {
      "name": "HypeRate ID",
      "default": "1234",
      "type": "text",
      "isPassword": false,
      "readOnly": false
    }
  ]
}
